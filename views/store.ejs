<!DOCTYPE html>
<html lang="en">

<%- include('./partial/head')%>

    <body>
        <script src="/public/events/validateRegister.js"></script>       

        <%- include('./partial/header')%>

            <main class="main-section-store">
                <% if(locals.session){ %>
                    <% if(locals.session.userType !== "Cliente"){ %>
                    <div class="product-create_button-container">
                        <a href="/product-create"><button class="button_product-add"><i class="fas fa-plus"></i>Añadir Producto</button></a>
                    </div>
                    <%}%>
                <%}%>
                <section class="main-store-catg_container">

                   

                    <div class="sidebar">
                        <div class="sidebar-list">

                            <h4 class="sidebar-title">Categorias</h4>
                            <ul>
                                <li><a href="/productsList"> TODOS </a></li>
                                <li><a href="/store/14"> MOUSE</a></li>
                                <li><a href="/store/15"> SILLAS GAMER</a></li>
                                <li><a href="/store/17"> ACCESORIOS</a></li>
                                <li><a href="/store/16"> NOTEBOOKS </a></li>
                                <li><a href="/store/18"> MICROFONOS</a></li>
                                <li><a href="/store/19"> AURICULARES</a></li>
                                <li><a href="/store/20"> PARLANTES</a></li>
                                <li><a href="/store/21"> PC ARMADAS</a></li>
                                <li><a href="/store/22"> CONECTIVIDAD</a></li>
                                <li><a href="/store/23"> TECLADOS</a></li>
                                <li><a href="/store/24"> JOSTICKS</a></li>
                                <li><a href="/store/25"> MEMORIAS</a></li>
                                <li><a href="/store/26"> PROCESADORES</a></li>
                                <li><a href="/store/27"> FAN COOLERS</a></li>
                                <li><a href="/store/28"> OFERTAS</a></li>
                                <li><a href="/store/29"> MONITORES</a></li>
                                <li><a href="/store/30"> CONSOLAS</a></li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="catg-store_container-products">
                        <% for (let i = 0; i < category.product.length; i++) {%>
                            <% if(category.product.id != 1) {%>
                        <article class="product_item">
                           
                            <a href=""></a>
                            <a class="poduct-store_main-link" href="/product-detail/<%= category.product[i].id %>">
                                <img class="product_item-img" src="/images/<%= category.product[i].photo1%>" alt="item name">
                                <div class="product_item-main_article">
                                    <p class="product_item-main_article-name"><%= category.product[i].name %></p>
                                    
                                    <div class="envio">
                                    <% if(category.product[i].shipping == 1){%>
                                        <i class="fas fa-truck"></i>
                                        <span> Envio Gratis</span>
                                     <%}%>
                                    </div>
                                    
                                   
                                    <p class="price">$ <%= category.product[i].price %></p>
                                    <% if(category.product[i].discountAply > 0){%>
                                        <p class="discount"><%= category.product[i].discountAply %>% OFF</p>
                                    <%}%>
                                </div>
                                
                            </a>
                            <div class="button-container">
                                <a href="" class="store_cart-link" id="addToCart">
                                    <input class="button" type="submit" value="Añadir al Carro">
                                </a>
                                <a href="" class="store_cart-link">
                                    <input class="button" id="buy-now" type="submit" value="Comprar Ahora">
                                </a>
                            </div>
                            <i class="fa fa-heart"></i>
                              
                              <% if(locals.session){ %>
                                <% if(locals.session.userType !== "Cliente"){ %>
                            <button class="store_product-edit-button"><a href="/product-edit/<%= category.product[i].id %>"><i
                                        class="fas fa-pencil-alt"></i></a></button>
                                 <% } %>  
                            <% } %>          
                        </article>
                        <% } %>   
                        <% } %>
                    </div>
                    
                </section>
                
                <section class="information">

                    <div class="information-section_container">
                        <h3 class="information-section_container_title">Information</h3>
                        <box class="information-section_container_item1">
                            <div class="box-container_item">
                                <h3 class="box-title">NEWSLETTER <i class="fas fa-newspaper"></i></h3>
                            </div>
                        </box>

                        <box class="information-section_container_item1">
                            <div class="box-container_item">

                                <h3 class="box-title">HOW TO BUY <i class="fas fa-store"></i></h3>
                            </div>
                        </box>

                        <box class="information-section_container_item1">
                            <div class="box-container_item">
                                <h3 class="box-title">FAQ <i class="far fa-thumbs-up"></i></h3>
                            </div>
                        </box>
                </section>

            </main>

            <%- include('./partial/footer')%>

        <script src="../public/events/addToCart.js"></script>
    </body>

</html>