<!DOCTYPE html>
<html lang="en">

<%- include('./partial/head')%>

    <body>

        <%- include('./partial/header')%>

            <section class="hero">
                <img class="hero-banner" src="images/banner.webp" alt="Banner Landscape">
            </section>



            <main class="main-section-store">

                <section class="main-store-catg_container">


                    <div class="sidebar">
                        <div class="sidebar-list">

                            <h4 class="sidebar-title">Hardware</h4>
                            <ul>
                                <li><a href="#"> MOUSE </a></li>
                                <li><a href="#"> TECLADOS </a></li>
                                <li><a href="#"> MONITORES </a></li>
                                <li><a href="#"> NOTEBOOKS </a></li>
                            </ul>
                            <h4 class="sidebar-title">Consolas</h4>
                            <ul>
                                <li><a href="#"> PS5</a></li>
                                <li><a href="#"> XBOX </a></li>
                                <li><a href="#"> PSE </a></li>
                                <li><a href="#"> NINTENDO </a></li>

                            </ul>
                            <h4 class="sidebar-title">Accesorios</h4>
                            <ul>
                                <li><a href="#"> Microfonos</a></li>
                                <li><a href="#"> Lentes </a></li>
                                <li><a href="#"> Mousepad </a></li>
                                <li><a href="#"> LÃ¡mparas </a></li>

                            </ul>
                            <h4 class="sidebar-title">Ofertas</h4>
                            <ul>
                                <li><a href="#"> Hard</a></li>
                                <li><a href="#"> Soft </a></li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="catg-store_container-products">
                        <% for (let i = 0; i < products.length; i++) {%>
                        <article class="product_item">
                           
                            <a href="/store/<%= products.id %>"></a>
                            <a class="poduct-store_main-link" href="/product-detail/<%= products[i].id %>">
                                <img class="product_item-img" src="/images/<%= products[i].photo1%>" alt="item name">
                                <div class="product_item-main_article">
                                    <p class="product_item-main_article-name"><%= products[i].name %></p>
                                    
                                    <div class="envio">
                                        <i class="fas fa-truck"></i>
                                        <span></i> Envio Gratis</span>
                                    </div>
                                    <p class="price">$ <%= products[i].price %></p>
                                    <p class="discount"><%= products[i].discount %>% OFF</p>
                                    <h4 class="description"><%= products[i].description %></h4>
                                </div>
                                
                            </a>
                            <div class="button-container">
                                <span class="button-span"> </span>
                                <a href="cart" class="store_cart-link">
                                    <input class="button" type="submit" value="Agregar al Carro">
                                </a>
                                <a href="cart" class="store_cart-link">
                                    <input class="button" id="buy-now" type="submit" value="Comprar Ahora">
                                </a>
                            </div>
                            <i class="fa fa-heart"></i>
                            <button class="store_product-edit-button"><a href="/product-create"><i
                                        class="fas fa-pencil-alt"></i></a></button>
                                        
                        </article>
                     <% } %>   
                    </div>
                    
                </section>
                
                <section class="information">

                    <div class="information-section_container">
                        <h3 class="information-section_container_title">Information</h3>
                        <box class="information-section_container_item1">
                            <div class="box-container_item">
                                <h3 class="box-title">NEWSLETTER <i class="fas fa-newspaper"></i></h3>
                            </div>
                        </box>

                        <box class="information-section_container_item1">
                            <div class="box-container_item">

                                <h3 class="box-title">HOW TO BUY <i class="fas fa-store"></i></h3>
                            </div>
                        </box>

                        <box class="information-section_container_item1">
                            <div class="box-container_item">
                                <h3 class="box-title">FAQ <i class="far fa-thumbs-up"></i></h3>
                            </div>
                        </box>
                </section>

            </main>

            <%- include('./partial/footer')%>


    </body>

</html>